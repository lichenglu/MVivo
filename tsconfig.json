{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "build/dist",
		"module": "esnext",
		"target": "es6",
		"lib": ["es2017", "dom"],
		"sourceMap": true,
		"allowJs": true,
		"jsx": "react",
		"moduleResolution": "node",
		"rootDir": "src",
		"paths": {
			// module mapping
			// https://github.com/wmonk/create-react-app-typescript/pull/303
			"~/*": ["src/*"]
		},
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"experimentalDecorators": true
	},
	"exclude": [
		"node_modules",
		"build",
		"scripts",
		"acceptance-tests",
		"webpack",
		"jest",
		"src/setupTests.ts"
	]
}
